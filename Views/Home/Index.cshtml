@{
    ViewData["Title"] = "Home Page";
}

<div class="row align-items-center mb-5">
    <div class="col-md-7 text-center text-md-start">
        <h1 class="display-3 fw-bold mb-3 text-primary">Chào mừng đến với SportProduct!</h1>
        <p class="lead mb-4">Khám phá các sản phẩm thể thao chất lượng, giá tốt và dịch vụ tận tâm.</p>
        <a href="/Products" class="btn btn-lg btn-success shadow">Khám phá ngay</a>
    </div>
    <div class="col-md-5 text-center">
        <img src="/images/93583cb5-30e7-42cf-b43f-402d9a3788d9.jpg" alt="Sport Banner" class="img-fluid rounded-4 shadow-lg" style="max-height:320px;object-fit:cover;">
    </div>
</div>
<div class="row g-4">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title text-primary">Sản phẩm đa dạng</h5>
                <p class="card-text">Chúng tôi cung cấp nhiều loại sản phẩm thể thao phù hợp mọi nhu cầu.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title text-primary">Chất lượng đảm bảo</h5>
                <p class="card-text">Tất cả sản phẩm đều được kiểm định kỹ lưỡng trước khi đến tay khách hàng.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title text-primary">Hỗ trợ tận tâm</h5>
                <p class="card-text">Đội ngũ tư vấn luôn sẵn sàng hỗ trợ bạn mọi lúc, mọi nơi.</p>
            </div>
        </div>
    </div>
</div>
